{
  "manifest_version": 3,
  "name": "Coursera Auto Extension by GrazT",
  "version": "1.0",
  "description": "Tự động hóa việc học và làm quiz trên Coursera.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["https://www.coursera.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
